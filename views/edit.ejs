<%- include('partials/header') -%>


<body>
    <form class = "mainform" action="/edit/<%= employee.id %>?_method=PUT" method="POST">
        <h2>Edit Employee Data</h2>

        <label>Name</label>
        <input type = 'text' name = "name" value = "<%= employee.name %>"placeholder = "Full Name">

        <label>Email</label>
        <input type = 'text' name = "email" value = "<%= employee.email %>" placeholder = "example@email.com">

        <label>Gender</label>
        <input type = 'text' name = "gender" value = "<%= employee.gender %>" placeholder = "Gender">

        <label>Department</label>
        <input type = 'text' name = "department" value = "<%= employee.department %>" placeholder = "Department">

        <label>Salary</label>
        <input type = 'number' name = "salary" value = "<%= employee.salary %>" placeholder = "$">
        <button>Submit</button>
    </form>
</body>
</html>

































